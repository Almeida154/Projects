<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="10dp"
    tools:showIn="@layout/activity_coupons"
    app:cardElevation="6dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/txvCouponName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensansbold"
            android:textSize="18sp"
            tools:text="SPACESOFT"/>

        <TextView
            android:id="@+id/txvCouponDiscount"
            android:layout_below="@id/txvCouponName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensansregular"
            android:textSize="15sp"
            tools:text="Desconto: R$ 60,00"/>

        <TextView
            android:id="@+id/txvCouponMinPrice"
            android:layout_below="@id/txvCouponDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensanslight"
            android:textSize="15sp"
            tools:text="Valor mínimo: R$ 100,00"/>

        <TextView
            android:id="@+id/txvCouponAvailability"
            android:layout_below="@id/txvCouponMinPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensanslight"
            android:textSize="15sp"
            android:textColor="#3CE328"
            tools:text="Disponível"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>