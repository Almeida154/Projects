<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateActivity"
    android:background="@color/colorPrimary">

    <ImageView
        android:onClick="ivBack"
        android:padding="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back"/>

    <TextView
        android:id="@+id/txvText"
        android:layout_alignStart="@id/edtIdLayoutUpdt"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginTop="100dp"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtUpdt"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edtIdLayoutUpdt"
        android:layout_below="@+id/txvText"
        android:layout_centerHorizontal="true"
        android:theme="@style/TextLabel"
        android:layout_marginTop="50dp"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:hint="@string/id"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        app:boxCornerRadiusTopStart="3dp"
        app:boxCornerRadiusTopEnd="3dp"
        app:boxBackgroundColor="#2C2C2C">
        <com.google.android.material.textfield.TextInputEditText
            android:enabled="false"
            android:id="@+id/edtIdUpdt"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:inputType="text|textNoSuggestions|textCapWords"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edtProductLayoutUpdt"
        android:layout_below="@+id/edtIdLayoutUpdt"
        android:layout_centerHorizontal="true"
        android:theme="@style/TextLabel"
        android:layout_marginTop="35dp"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:hint="@string/product"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        app:counterEnabled="true"
        app:counterMaxLength="30"
        app:boxCornerRadiusTopStart="3dp"
        app:boxCornerRadiusTopEnd="3dp"
        app:boxBackgroundColor="#222222"
        app:hintTextColor="@android:color/secondary_text_light_nodisable"
        app:counterTextColor="@android:color/white"
        app:errorEnabled="true">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtProductUpdt"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:inputType="text|textNoSuggestions|textCapWords"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edtPriceLayoutUpdt"
        android:layout_below="@+id/edtProductLayoutUpdt"
        android:layout_centerHorizontal="true"
        android:theme="@style/TextLabel"
        android:layout_marginTop="20dp"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:hint="@string/price"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        app:counterEnabled="true"
        app:counterMaxLength="10"
        app:boxCornerRadiusTopStart="3dp"
        app:boxCornerRadiusTopEnd="3dp"
        app:boxBackgroundColor="#222222"
        app:hintTextColor="@android:color/secondary_text_light_nodisable"
        app:counterTextColor="@android:color/white"
        app:errorEnabled="true">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtPriceUpdt"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:inputType="numberDecimal"/>
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:theme="@style/Theme.AppCompat.NoActionBar"
        android:background="@drawable/btn_bg"
        android:textColor="@android:color/white"
        android:onClick="btnUpdate"
        android:textStyle="bold|italic"
        android:textSize="20sp"
        android:text="@string/updt"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-6dp"/>

</RelativeLayout>